#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include<math.h>
int main()
{
    int i, j, n;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            if(j<(n-1-i))
                printf(" ");
            else
                printf("#");
        }

             printf("\n");
    
    
    }
    
    return 0;
}
    
