#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n,i,c=0,m=0;
    cin>>n;
    long long int a[n];
    for(i=0;i<n;i++)
        cin>>a[i];
    for(i=0;i<n;i++)
    {
        if(m<a[i])
        {
            m=a[i];
        }
    }
    for(i=0;i<n;i++)
    {
        if(a[i]==m)
        {
            c++;
        }
    }
    
    cout<<c;
    return 0;
}
