#include <bits/stdc++.h>

using namespace std;
int main()
{
    int n,k,i,sum,anna,temp,dif,share,over;
    cin>>n>>k;
    long long int a[n];
    for(i=0;i<n;i++)
        cin>>a[i];
    cin>>anna;
    
    for(i=0;i<n;i++)
        sum=sum+a[i];
    for(i=0;i<n;i++)
    {
        if(i==k)
            temp=a[i];
    }
    dif=sum-temp;
    share=dif/2;
    if(anna!=share)
    {
        over=anna-share;
        cout<<over;
    }
    else
        cout<<"Bon Appetit";
}
